<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/statusCircle"
            android:layout_width="@dimen/_40mdp"
            android:layout_height="@dimen/_40mdp"
            android:layout_marginTop="8dp"
            android:background="@drawable/orange_circle_1"
            android:backgroundTint="#CAC2C2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/name"
            android:layout_width="150dp"
            android:layout_height="22dp"
            android:layout_marginTop="8dp"
            android:background="#80BAB7B7"
            app:layout_constraintStart_toEndOf="@+id/statusCircle"
            app:layout_constraintTop_toTopOf="@+id/statusCircle" />

        <View
            android:id="@+id/profession"
            android:layout_width="70dp"
            android:layout_height="18dp"
            android:layout_marginTop="4dp"
            android:background="#80BAB7B7"
            app:layout_constraintBottom_toBottomOf="@+id/statusCircle"
            app:layout_constraintStart_toStartOf="@+id/name"
            app:layout_constraintTop_toBottomOf="@+id/name" />

        <View
            android:id="@+id/roundedImage"
            android:layout_width="0dp"
            android:layout_height="@dimen/_150mdp"
            android:layout_marginTop="@dimen/_16mdp"
            android:background="@drawable/follow_active_btn"
            android:backgroundTint="#80BAB7B7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/statusCircle" />

        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:background="#80BAB7B7"
            app:layout_constraintEnd_toEndOf="@+id/roundedImage"
            app:layout_constraintStart_toStartOf="@+id/roundedImage"
            app:layout_constraintTop_toBottomOf="@+id/roundedImage" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>